{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": ["DIRECT_DB_URL", "DATABASE_URL"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "tsconfig*.json", "next.config.*"],
      "outputs": ["dist/**", "build/**", ".next/**", "lib/**", "generated/**", "src/generated/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["$TURBO_DEFAULT$", ".eslintrc*", "eslint.config.*", "packages/config/eslint/**"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig*.json", "packages/config/tsconfig/**"],
      "outputs": ["generated/**", "src/generated/**"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/*.spec.*",
        "**/*.test.*",
        "jest.config.*",
        "**/jest.config.*"
      ],
      "outputs": []
    },
    "test:e2e": {
      "dependsOn": ["^test:e2e"],
      "cache": false
    },
    "test:prepush": {
      "dependsOn": ["^test:prepush"],
      "cache": true
    },
    "openapi": {
      "dependsOn": ["^openapi"],
      "inputs": ["$TURBO_DEFAULT$", "src/**", "package.json", "tsconfig*.json"],
      "outputs": ["openapi.json"]
    },
    "codegen": {
      "dependsOn": ["openapi", "^codegen"],
      "inputs": ["$TURBO_DEFAULT$", "openapi.json", "orval.config.*"],
      "outputs": ["generated/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
