{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "lib/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "test": {
      "dependsOn": ["^test"],
      "cache": true
    },
    "test:e2e": {
      "dependsOn": ["^test:e2e"],
      "cache": false
    },
    "test:prepush": {
      "dependsOn": ["^test:prepush"]
    },
    "openapi": {
      "dependsOn": ["^openapi"],
      "inputs": ["src/**", "package.json", "tsconfig.json"],
      "outputs": ["openapi.json"]
    },
    "codegen": {
      "dependsOn": ["openapi"],
      "inputs": ["openapi.json", "orval.config.cjs"],
      "outputs": ["src/generated/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
