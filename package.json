{
  "name": "salafi-durus",
  "private": true,
  "packageManager": "pnpm@10.28.1",
  "scripts": {
    "dev": "turbo dev",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "dev:mobile": "pnpm --filter mobile dev",
    "dev:api+web": "turbo dev --filter=api --filter=web",
    "dev:api+mobile": "turbo dev --filter=api --filter=mobile",
    "build": "turbo build",
    "lint": "turbo lint",
    "lint:api+web": "turbo lint --filter=api --filter=web",
    "lint:api+mobile": "turbo lint --filter=api --filter=mobile",
    "typecheck": "turbo typecheck --concurrency 1",
    "typecheck:api+web": "turbo typecheck --concurrency 1 --filter=api --filter=web",
    "typecheck:api+mobile": "turbo typecheck --concurrency 1 --filter=api --filter=mobile",
    "test": "turbo test",
    "test:api+web": "turbo test --filter=api --filter=web",
    "test:api+mobile": "turbo test --filter=api --filter=mobile",
    "test:e2e": "turbo test:e2e",
    "test:prepush": "turbo test:prepush",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "clean": "turbo clean && rimraf node_modules",
    "prepare": "husky",
    "lint:staged": "lint-staged",
    "openapi": "turbo openapi",
    "codegen": "turbo codegen",
    "codegen:all": "turbo openapi codegen"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/react": "^19.2.9",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.0.0",
    "eslint-config-expo": "~10.0.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.0",
    "tsx": "^4.21.0",
    "turbo": "^2.0.0",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.53.1"
  }
}
